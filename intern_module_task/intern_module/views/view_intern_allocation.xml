<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="intern_action" model="ir.actions.act_window">
            <field name="name">Intern Desk Allocation</field>
            <field name="res_model">intern.allocation</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="desks_action" model="ir.actions.act_window">
            <field name="name">Desks</field>
            <field name="res_model">desk.allocation</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="equipment_action" model="ir.actions.act_window">
            <field name="name">Equipments</field>
            <field name="res_model">equipment.allocation</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="laptop_action" model="ir.actions.act_window">
            <field name="name">Laptops</field>
            <field name="res_model">laptop.allocation</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="intern_role_action" model="ir.actions.act_window">
            <field name="name">Intern Role</field>
            <field name="res_model">role.allocation</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="functional_action" model="ir.actions.act_window">
            <field name="name">Functional Training</field>
            <field name="res_model">functional.training</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="tech_front_action" model="ir.actions.act_window">
            <field name="name">Technical Frontend Training</field>
            <field name="res_model">intern.allocation</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="tech_back_action" model="ir.actions.act_window">
            <field name="name">Technical Backend Training</field>
            <field name="res_model">intern.allocation</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="model_view_tree" model="ir.ui.view">
            <field name="name">Tree.View</field>
            <field name="model">intern.allocation</field>
            <field name="arch" type="xml">
                <tree decoration-success="state in ('allocated')" decoration-danger="state in ('pending')">
                    <field name="name" />
                    <field name="cllg_name" optional='hide' />
                    <field name="contact_details" />
                    <field name="joining_date" />
                    <field name="state" invisible='1'/>
                </tree>
            </field>
        </record>


        <record id="model_view_form" model="ir.ui.view">
            <field name="name">Form View</field>
            <field name="model">intern.allocation</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"  />
                        <button name="allocated_button" widget="statusbar" options="{'clickable':'1'}"
                            string='Allocated' type='object' />
                        <button name="pending_button" widget="statusbar" options="{'clickable':'1'}"
                            string='Pending' type='object' />
                        <button type="action" name="%(functional_action)d" string="Functional Training" title="Send to " />

                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Pending" bg_color="bg-danger" attrs="{'invisible': [('state', '!=', 'pending')]}"/>
                        <widget name="web_ribbon" title="Allocated" bg_color="bg-success" attrs="{'invisible': [('state', '!=', 'allocated')]}"/>
                        <label for="name">Name</label>
                        <h1>
                            <field name="name" />
                        </h1>
                        <group>
                            <group>
                                <field name="cllg_name" />
                                <field name="joining_date" />
                                <field name='laptop_assigned' />
                                <field name='desk_no' />
                                <field name="status" invisible = '1'/>
                                <field name="coach"/>
                            </group>
                            <group>
                                <field name="intern_type" />
                                <field name="contact_details" widget="phone" />
                                <field name="other_equipments" widget="many2many_tags"
                                    options="{'color_field': 'color'}" />
                                <field name="email_id" widget="email" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"></field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />

                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>

            </field>
        </record>

        <record id="intern_allocation_search" model="ir.ui.view">
            <field name="name">Intern Allocation</field>
            <field name="model">intern.allocation</field>
            <field name="arch" type="xml">
                <search string="Intern Allocation">
                    <field name="name"/>
                    <field name="laptop_assigned"/>
                    <field name="cllg_name"/>
                    <field name="other_equipments"/>
                    <field name="intern_type"/>

                    <group expand="1" string="Group By">
                        <filter string="Laptop Assigned" name="laptop_assigned" context="{'group_by':'laptop_assigned'}" />
                        <separator />
                        <filter string="College Name" name="cllg_name"
                            context="{'group_by': 'cllg_name'}" />
                    </group> 
                </search>
            </field>
        </record>


    </data>
</odoo>